<div class="organization-login">
	<%= form_tag sessions_create_organizations_path do %>
	<h3>Organization login:</h3>
	<p>
	  <%= label_tag :email %> <br>
	  <%= text_field_tag :email, params[:email], class: "form-control" %>
  </p>

  <p>
	  <%= label_tag :password %> <br>
		<%= password_field_tag :password, params[:password], class: "form-control" %>
	</p>

	<%= submit_tag(value = "Login", class:'btn btn-info btn-sm') %>
	<%= link_to "Register New Organization", new_organization_path, style: "float: right" %>

	<% end %>
</div>


