<div class="app-container">
  <h1 class="title">Organization Make Requests Page</h1>
  <span id="total">TOTAL:<%= @total_request_price %></span>
  <span id="complete">I'm Done!</span>
  <!-- List of Items -->
  <div class="available-items col-md-6">
    <h3>Available Items</h3>
    <div class="available-item-list">
      <% @items.each do |item| %>
          <%= render 'available_item', :item => item %>
      <% end %>
    </div>
  </div>


  <!-- Current Requests -->
  <div class="available-items col-md-6">
    <h3>Items Requested</h3>
    <div class="requested-item-list">
      <% @campaign.requests.each do |request| %>
        <%= render 'requested_item', :request => request %>
      <% end %><br>
    </div>
  </div>
</div>
