<div class = "organization-form">

	<%= form_for ([@organization, @campaign]) do |f| %>

		<%= f.label :name, "Campaign name" %><br />
		<%= f.text_field :name, class: 'form-control'%><br>

		<%= f.label :description %><br />
		<%= f.text_area :description, class: 'form-control'%><br>

    <%= f.label :city %><br />
    <%= f.text_area :city, class: 'form-control'%><br>

    <%= f.label :state %><br />
    <%= f.text_area :state, class: 'form-control'%><br>

    <%= f.label :country %><br />
    <%= f.text_area :country, class: 'form-control'%><br>

 		<%= f.label :start_date %><br />
 		<%= f.date_select :start_date, class: 'form-control'%><br>

 		<%= f.label :end_date %><br />
 		<%= f.date_select :end_date, class: 'form-control'%><br>

		<div class="text-center">
			<%= f.submit "Register campaign", class:'btn btn-info btn-sm text-center'%>
		</div>

	<% end %>

</div>
